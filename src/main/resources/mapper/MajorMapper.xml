<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="mapper.MajorMapper">
    <insert id="insert" parameterType="entity.Major">
        INSERT INTO majors
        (major_id, major_name)
        VALUE(#{majorId}, #{majorName})
    </insert>
    <update id="update">
        UPDATE majors
        SET major_name = #{majorName}
        WHERE major_id = #{majorId}
    </update>
    <delete id="delete" parameterType="java.lang.String">
        DELETE FROM majors WHERE major_id = #{majorId}
    </delete>

    <select id="findAll" resultType="entity.Major">
        SELECT * FROM majors
    </select>
</mapper>