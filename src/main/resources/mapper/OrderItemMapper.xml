<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="mapper.OrderItemMapper">

    <insert id="batchInsert" parameterType="java.util.List" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO order_items (order_id, product_id, quantity, price_at_time)
        VALUES
        <foreach collection="list" item="orderItem" separator=",">
            (#{orderItem.orderId}, #{orderItem.productId}, #{orderItem.quantity}, #{orderItem.priceAtTime})
        </foreach>
    </insert>
    <select id="getByOrderId" resultType="entity.OrderItem">
        SELECT * FROM order_items WHERE id = #{id}
    </select>

</mapper>