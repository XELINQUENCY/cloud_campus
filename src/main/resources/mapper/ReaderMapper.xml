<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="mapper.ReaderMapper">
    <insert id="insert">
        INSERT INTO readers
        <trim prefix="(" suffix=")" suffixOverrides=",">
            reader_id,
            <if test="name != null">name,</if>
            <if test="is_overdue != null">is_overdue,</if>
        </trim>
        <trim prefix="VALUES (" suffix=")" suffixOverrides=",">
            #{readerId},
            <if test="name != null">#{name},</if>
            <if test="is_overdue != null">#{isOverdue},</if>
        </trim>
    </insert>
    <update id="updateOverdueStatus">
        UPDATE readers SET is_overdue = #{isOverdue} WHERE reader_id = #{readerId}
    </update>

    <select id="findById" resultType="entity.Reader">
        SELECT * FROM readers WHERE reader_id = #{readerId}
    </select>
</mapper>