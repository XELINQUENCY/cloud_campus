<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="mapper.KlassMapper">
    <insert id="insert" parameterType="entity.Klass">
        INSERT INTO classes
        <trim prefix="(" suffix=")" suffixOverrides=",">
            class_id,
            class_name,
            <if test="major_id != null">major_id</if>
        </trim>
        <trim prefix="VALUES (" suffix=")" suffixOverrides=",">
            #{classId},
            #{className},
            <if test="major_id != null">#{majorId}</if>
        </trim>
    </insert>
    <update id="update">
        UPDATE classes
        <set>
            <if test="class_name != null">
                class_name = #{class_name}
            </if>
            <if test="major_id != null">
                major_id = #{majorId}
            </if>
        </set>
        WHERE class_id = #{classId}
    </update>
    <delete id="delete" parameterType="java.lang.String">
        DELETE FROM classes WHERE class_is = #{classId}
    </delete>

    <select id="findAll" resultType="entity.Klass">
        SELECT * FROM classes
    </select>
</mapper>