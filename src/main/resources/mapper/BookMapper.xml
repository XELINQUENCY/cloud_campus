<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="mapper.BookMapper">
    <insert id="insert">
        INSERT INTO books
        <trim prefix="(" suffix=")" suffixOverrides=",">
            book_id,
            <if test="title != null">title,</if>
            <if test="author != null">author,</if>
            <if test="publisher != null">publisher,</if>
            <if test="status != null">status,</if>
        </trim>
        <trim prefix="VALUES (" suffix=")" suffixOverrides=",">
            #{bookId},
            <if test="title != null">#{title},</if>
            <if test="author != null">#{author},</if>
            <if test="publisher != null">#{publisher},</if>
            <if test="status != null">#{status},</if>
        </trim>
    </insert>

    <update id="updateStatus">
        UPDATE books SET status = #{status} WHERE book_id = #{bookId}
    </update>
    <update id="update">
        UPDATE books
        <set>
            <if test="title != null">title = #{title},</if>
            <if test="author != null">author = #{author},</if>
            <if test="publisher != null">publisher = #{publisher},</if>
            <if test="status != null">status = #{status},</if>
        </set>
        WHERE book_id = #{bookId}
    </update>

    <select id="findById" resultType="entity.Book">
        SELECT * FROM books WHERE book_id = #{bookId}
    </select>
    <select id="searchBooks" resultType="entity.Book">
        SELECT book_id, title, author, publisher, status FROM books
        <where>
            <if test="title != null and title != ''">
                AND title LIKE '%' || #{title} || '%'
            </if>
            <if test="author != null and author != ''">
                AND author LIKE '%' || #{author} || '%' </if>
            <if test="publisher != null and publisher != ''">
                AND publisher LIKE '%' || #{publisher} || '%' </if>
            <if test="status != null">
                AND status = #{status}
            </if>
        </where>
    </select>
</mapper>