<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="mapper.StudentMapper">
    <insert id="insert" parameterType="entity.schoolroll.Student">
        INSERT INTO students
        <trim prefix="(" suffix=")" suffixOverrides=",">
            student_id,
            name,
            <if test="gender != null">gender,</if>
            <if test="class_id != null">class_id,</if>
            <if test="major_id != null">major_id,</if>
            <if test="status != null">status,</if>
            <if test="enroll_date != null">enroll_date,</if>
        </trim>
        <trim prefix="VALUES (" suffix=")" suffixOverrides=",">
            #{studentId},
            #{name},
            <if test="gender != null">#{gender},</if>
            <if test="class_id != null">#{classId},</if>
            <if test="major_id != null">#{majorId},</if>
            <if test="status != null">#{status},</if>
            <if test="enroll_date != null">#{enrollDate},</if>
        </trim>
    </insert>
    <update id="updateStatus">
        UPDATE students
        SET status = #{newStatus}
        WHERE student_id = #{studentId}
    </update>

    <select id="findById" resultType="entity.schoolroll.Student">
        SELECT * FROM students WHERE student_id = #{studentId}
    </select>
    <select id="queryStudents" resultType="entity.schoolroll.Student">
        SELECT * FROM
        students
        <where>
            <if test="studentId != null">
                student_id = #{studentId}
            </if>
            <if test="name != null">
                name = #{name}
            </if>
            <if test="classId != null">
                class_id = #{classId}
            </if>
        </where>
    </select>
</mapper>