<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="mapper.ProductMapper">
    <select id="findProductById" resultType="entity.Product">
        SELECT * FROM products WHERE id = #{id}
    </select>
    <select id="findByCategory" resultType="entity.Product">
        SELECT * FROM products WHERE category = #{category}
    </select>

    <select id="search" resultType="entity.Product" parameterType="java.lang.String">
            SELECT *
            FROM products
            WHERE name LIKE '%' || #{keyword} || '%'
    </select>
    <insert id="insertProduct" parameterType="entity.Product" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO products (name, category, description, price, stock, image_url)
        VALUES (#{name}, #{category}, #{description}, #{price}, #{stock}, #{imageUrl})
    </insert>

    <update id="updateProduct" parameterType="entity.Product">
        UPDATE products
        <set>
            <if test="name != null">
                name = #{name},
            </if>
            <if test="category != null">
                category = #{category},
            </if>
            <if test="description != null">
                description = #{description},
            </if>
            <if test="price != null">
                price = #{price},
            </if>
            <if test="stock != null">
                stock = #{stock},
            </if>
            <if test="imageUrl != null">
                image_url = #{imageUrl},
            </if>
        </set>
        WHERE id = #{id}
    </update>

    <delete id="deleteProduct" parameterType="java.lang.Integer">
        DELETE FROM products WHERE id = #{id}
    </delete>

    <update id="updateStock">
        UPDATE products
        SET stock = #{quantity}
        WHERE id = #{productId}
    </update>


</mapper>